<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  
  <div class="mt-8 p-4 flex flex-col items-center justify-center bg-white space-y-2 shadow-2xl rounded-lg">
    <h2 class="mb-4 text-2xl font-bold text-center">Forgot your password?</h2>

    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="w-full">
      <%= f.label :email, class: "font-bold text-gray-700" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border-pink-100 focus:border-pink-500 focus:ring-0 rounded-md" %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: "btn text-pink-100 bg-pink-500 hover:bg-blue-400 hover:scale-105 transition-all duration-300 cursor-pointer" %>
    </div>
  </div>
<% end %>

